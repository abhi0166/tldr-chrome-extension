{
  "name": "tldr-chrome-extension",
  "version": "1.0.0",
  "description": "TLDR Chrome Extension - AI-powered webpage summarizer",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build:extension": "./scripts/build-extension.sh",
    "setup:dev": "./scripts/dev-setup.sh",
    "start:backend": "cd backend && python start_server.py",
    "package": "npm run build && cd dist && zip -r ../tldr-extension.zip .",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/chrome": "^0.0.246",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-static-copy": "^0.17.0"
  },
  "keywords": [
    "chrome-extension",
    "react",
    "typescript",
    "summarization",
    "ai",
    "nlp"
  ],
  "author": "TLDR Extension Team",
  "license": "MIT"
}

